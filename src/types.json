{
    "$id": "types",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "BumblebeeErrorType": {
            "properties": {
                "errorCode": {
                    "$ref": "types#/definitions/errorCodes"
                },
                "errorObject": {},
                "message": {
                    "type": "string"
                },
                "metaData": {
                    "type": "string"
                },
                "statusCode": {
                    "$ref": "types#/definitions/statusCodes"
                }
            },
            "required": [
                "message"
            ],
            "type": "object"
        },
        "GenericObjectType": {
            "additionalProperties": {
                "$ref": "types#/definitions/GenericType"
            },
            "type": "object"
        },
        "GenericResponse": {
            "properties": {
                "provider": {
                    "$ref": "types#/definitions/Provider"
                },
                "threads": {
                    "items": {
                        "$ref": "types#/definitions/GenericThread"
                    },
                    "type": "array"
                },
                "userInfo": {
                    "items": {
                        "$ref": "types#/definitions/GenericUser"
                    },
                    "type": "array"
                }
            },
            "required": [
                "provider",
                "threads",
                "userInfo"
            ],
            "type": "object"
        },
        "GenericThread": {
            "properties": {
                "creadtedAt": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "userId": {
                    "type": "string"
                }
            },
            "required": [
                "creadtedAt",
                "text",
                "userId"
            ],
            "type": "object"
        },
        "GenericType": {
            "anyOf": [
                {
                    "$ref": "types#/definitions/GenericObjectType"
                },
                {
                    "items": {
                        "$ref": "types#/definitions/GenericType"
                    },
                    "type": "array"
                },
                {
                    "type": [
                        "string",
                        "number",
                        "boolean"
                    ]
                }
            ]
        },
        "GenericUser": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "profileImageUrl": {
                    "type": "string"
                },
                "userName": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "profileImageUrl",
                "userName"
            ],
            "type": "object"
        },
        "GotClientType": {
            "type": "object"
        },
        "GotResponse": {
            "properties": {
                "data": {}
            },
            "required": [
                "data"
            ],
            "type": "object"
        },
        "Provider": {
            "enum": [
                "slack",
                "twitter"
            ],
            "type": "string"
        },
        "TwitterLookup": {
            "properties": {
                "expansions": {
                    "type": "string"
                },
                "ids": {
                    "type": "string"
                },
                "query": {
                    "type": "string"
                },
                "tweet.fields": {
                    "type": "string"
                },
                "user.fields": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "errorCodes": {
            "enum": [
                "AUTH_ERROR",
                "INPUT_ERROR",
                "NOT_FOUND",
                "NO_CONTENT",
                "UNKNOWN"
            ],
            "type": "string"
        },
        "statusCodes": {
            "enum": [
                200,
                204,
                400,
                401,
                403,
                404,
                408,
                429,
                500,
                502,
                503,
                504
            ],
            "type": "number"
        }
    }
}

